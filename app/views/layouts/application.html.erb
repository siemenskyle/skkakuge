    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
          <a href="/games/sf5">Street Fighter V</a>
        </li>
        <li>
          <a href="/games/xrd">Guilty Gear Xrd</a>
        </li>
        <li>
          <a href="/games/usf4">Ultra Street Fighter IV</a>
        </li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>

<hr>

<%= yield %>

<hr>

<div class="container">
<!-- Footer -->
<footer>
  <div class="row">
    <div class="col-lg-12">
      <p>Site under construction. Created by Kyle Siemens; 2016</p>
      <a href="/admin/">Admin</a>
    </div>
  </div>
  <!-- /.row -->
</footer>
</div>
</body>
</html>
